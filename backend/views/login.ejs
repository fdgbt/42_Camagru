<%- include('includes/head.ejs') %>
    </head>

    <%- include('includes/main.ejs') %>

        <div class="max-h-screen/mhf sm:max-h-screen/hf h-screen/mhf sm:h-screen/hf overflow-y-scroll overflow-x-hidden flex flex-col sm:justify-center items-center">
            
            <div id="error" class="hidden work-sans text-xl text-center text-red-600 cursor-default" ></div>
            <div class="relative border border-double dark:border-slate-700 w-full sm:w-96 rounded-3xl m-4">
                <div class="relative border border-double dark:border-slate-700 w-auto rounded-2xl m-2">

                    <div class="absolute top-3 right-3 border border-double dark:border-slate-700 w-10 h-10 rounded-full"></div>
                    <div
                        class="invisible sm:visible opacity-60 absolute top-[3.5rem] left-[4rem] border dark:border-slate-700 w-[15rem] h-[15rem] rounded-full">
                    </div>
                    <div
                        class="invisible sm:visible opacity-60 absolute top-[4.1rem] left-[4.6rem] border dark:border-slate-700 w-[13.8rem] h-[13.8rem] rounded-full">
                    </div>

                    <form action="#" method="POST" onsubmit="login();return false" class="flex flex-col items-center gap-8 p-8">
                        <div
                            class="work-sans text-xl text-gray-700 dark:text-slate-500 hover:text-black dark:hover:text-slate-100 focus-within:text-black dark:focus-within:text-slate-100 flex flex-col text-center items-center w-full sm:w-auto z-10">

                            <label for="username" class="transition duration-200">Username</label>
                            <input type="text" name="username" id="username" placeholder="JohnDoe" autocomplete="username" required
                                class="transition duration-200 border dark:border-slate-700 focus:transition-none focus:border-cyan-500 dark:focus:border-cyan-500 focus:ring focus:outline outline-cyan-500 hover:text-black dark:hover:text-slate-100 dark:placeholder:text-slate-700 bg-slate-100 dark:bg-zinc-900 rounded-xl text-center w-full sm:w-auto" />
                        </div>
                        <div
                            class="work-sans text-xl text-gray-700 dark:text-slate-500 hover:text-black dark:hover:text-slate-100 focus-within:text-black dark:focus-within:text-slate-100 flex flex-col text-center items-center w-full sm:w-auto z-10">
                            <label for="password" class="transition duration-200">Password</label>
                            <input type="password" name="password" id="password" placeholder="Secure Password" autocomplete="current-password" required
                                class="transition duration-200 border dark:border-slate-700 focus:transition-none focus:border-cyan-500 dark:focus:border-cyan-500 focus:ring focus:outline outline-cyan-500 hover:text-black dark:hover:text-slate-100 dark:placeholder:text-slate-700 bg-slate-100 dark:bg-zinc-900 rounded-xl text-center w-full sm:w-auto" />
                        </div>

                        <button
                            onclick="login();return false"
                            class="transition duration-200 work-sans text-xl text-gray-700 dark:text-cyan-500 hover:text-slate-100 border-cyan-500 bg-slate-100 hover:bg-cyan-400 dark:bg-transparent dark:hover:bg-cyan-400 dark:hover:text-slate-100 hover:shadow-2xl active:shadow-2xl active:translate-y-2 border-2 rounded-full p-2 px-8 w-full sm:w-auto z-10">
                            Login
                        </button>
                    </form>
                    <div
                        class="transition duration-200 work-sans text-xl text-gray-700 dark:text-slate-600 hover:text-black dark:hover:text-slate-100 text-center active:translate-y-2 pb-4">
                        <a href="/login/lost">Reset my Password</a>
                    </div>
                    <div
                        class="transition duration-200 work-sans text-xl text-gray-700 dark:text-slate-600 hover:text-black dark:hover:text-slate-100 text-center active:translate-y-2 pb-8">
                        <a href="/signup">I don't have an account</a>
                    </div>
                </div>
            </div>
        </div>
        </main>
        <script src="/js/login.js"></script>

        <%- include('includes/footer.ejs') %>