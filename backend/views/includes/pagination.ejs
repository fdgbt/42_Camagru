<div id="pagination" class="flex flex-col items-center text-center text-gray-700 dark:text-slate-200 work-sans text-2xl fixed inset-y-1/3 right-4 z-50">
    <a href="?page=1" class="px-[1.1rem] py-2 rounded-full transition duration-200 hover:text-black bg-slate-100 bg-opacity-30 dark:bg-opacity-10 hover:bg-opacity-100 dark:hover:bg-opacity-100">&laquo;</a>
    <%  
        let i = currentPage - 2;

        if (i < 1) {
            i = 1;
        }

        let iMax = i + 4;

        if (iMax > lastPagePaginated) {
            iMax = lastPagePaginated;
            i = lastPagePaginated - 4;
            if (i < 1)
                i = 1;
        }

        while (i <= iMax) {
    %>
            <a href="?page=<%= i %>" class="px-4 py-2 rounded-full <%= currentPage === i && paginated ? 'bg-black dark:bg-zinc-900 text-slate-100 dark:text-white' : 'transition duration-200 hover:text-black bg-slate-100 bg-opacity-30 dark:bg-opacity-10 hover:bg-opacity-100 dark:hover:bg-opacity-100'%>"><%= i %></a>
    <%  
            i++;
        }
    %>
    <a href="?page=<%= lastPagePaginated %>" class="px-[1.1rem] py-2 rounded-full transition duration-200 hover:text-black bg-slate-100 bg-opacity-30 dark:bg-opacity-10 hover:bg-opacity-100 dark:hover:bg-opacity-100">&raquo;</a>
</div>